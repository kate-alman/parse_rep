root = True

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8

# Whitespace at the end of lines
trim_trailing_whitespace = true

[*.py]
indent_size = 4

# Tab indentation (no size specified)
charset = utf-8
[Makefile]
indent_style = tab

[*.{js,json}]
charset = utf-8
indent_size = 2

[*.{yml,yaml,md,rb}]
indent_size = 2
